#!/bin/bash

# Trapping CTRL-C
trap ctrl_c INT
trap ctrl_c SIGINT
trap ctrl_c SIGTERM

# Console colors
red='\033[0;31m'
green='\033[0;32m'
green_bg='\033[42m'
yellow='\033[1;33m'
NC='\033[0m'

# Helper functions for console output
echo-red () { echo -e "${red}$1${NC}"; }
echo-green () { echo -e "${green}$1${NC}"; }
echo-green-bg () { echo -e "${green_bg}$1${NC}"; }
echo-yellow () { echo -e "${yellow}$1${NC}"; }

#Show some art
clear
cat "${PROJECT_ROOT}/build-scripts/ascii.txt"

echo-yellow "Dump dbs..."
fin db dump --db=sportbaza --db-user=user --db-password=user $PROJECT_ROOT/db/default_sportbaza.sql
fin db dump --db=tooll --db-user=user --db-password=user $PROJECT_ROOT/db/default_tooll.sql
fin db dump --db=winsport --db-user=user --db-password=user $PROJECT_ROOT/db/default_winsport.sql
echo